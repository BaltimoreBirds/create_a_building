<%= form_for @building do |f| %>
  <% if @building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@building.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @building.errors.full_messages.each do |msg| %>
