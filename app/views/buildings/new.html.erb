  </div>
  <div class="field">
    <%= f.label :description, 'Building Description' %><br />
    <%= f.text_field :description %>
  </div>
  <div class = "field">
    <%= f.label :owner_id, "Owner" %>
    <%= f.collection_select :owner_id,
      Owner.all, :id, :last_name, prompt: true %>
  </div>
  <div class="actions">
    <%= f.submit 'Enter new building record' %>
  </div>
