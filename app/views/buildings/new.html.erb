<h3>Enter a new building record:</h3>

<%= form_for @building do |f| %>
  <div class="field">
    <%= f.label :street_address, 'Street Address' %><br />
    <%= f.text_field :street_address %>
  </div>
  <div class="field">
    <%= f.label :city, 'City' %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state, 'State' %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :postal_code, 'Postal Code' %><br />
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :description, 'Building Description' %><br />
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit 'Enter new building record' %>
  </div>
<% end %>

